<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewListingHeight"
        android:background="@color/transparent"
        android:orientation="vertical"
        tools:ignore="overdraw">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/newsListPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/automotiveListName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/viewDescriptionLocation"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginBottom="2dp"
                android:text="@string/viewTitle"
                android:textColor="@color/white"
                android:textSize="@dimen/viewTitleSize"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:id="@+id/viewDescriptionLocation"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/newsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:text="@string/viewDescription"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/viewDescriptionSize" />


            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>